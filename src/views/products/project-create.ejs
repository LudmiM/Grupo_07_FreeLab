<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head')%>

  <body>

    <%-include('../partials/header', {title: 'Home | FreeLab' })%>
    <div class="container-pe mt-5">
      <main class="card edit-product-card">
        <div class="card-header ">
          <h1 class="mb-0">Crear nuevo proyecto</h1>
        </div>

        <form class="form__create formulario__projectCreate" action="/productos/agregarProyecto" method="POST">
            <div class="mb-3">
              <label for="title">Título:</label><br>
              <input type="text" id="title" name="title" required>
            </div>
            <div class="form__create mb-3">
              <label for="description">Descripción:</label><br>
              <textarea class="form-control text-description" id="exampleFormControlTextarea1"  name="description" rows="4" cols="50" required></textarea><br>
            </div>       
            <div  class="mb-3">
              <label for="skilles">Habilidades:</label><br>
              <select multiple name="skilles" class="mul-select" id="skills">
                <% skills.forEach(s => { %>
                  <option value="<%= s.id %>"><%= s.name %></option>
                <% }) %>
              </select>
            </div>

            <input id="idStatus" name="idStatus" type="number" value="2" hidden>

          <div class="caja__botones row">
            <div class="col-6 col-md-5 mx-auto">
              <button type="button" class="btn btn-primary"><a href="/usuarios/perfil">Cancelar</a></button>
            </div>
            <div class="col-6 col-md-5 mx-auto">
              <button type="submit" class="btn btn-primary">Siguiente</button>
            </div>
          </div>
        </form>
      </main>
    </div>
    <%-include('../partials/footer')%>
</body>
    <%-include('../partials/scripts')%>    
</html>