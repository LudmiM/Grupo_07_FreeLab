<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head', { title: 'name' }) %>

<body>
    <%- include('../partials/header') %>

    <main>
        <section>
            <article>
                <img src="/images/users/<%= userLogin.employerImage || userLogin.freelancerImage %>" alt="User Image">
                <div>
                    <h2><%= userLogin.companyName || (userLogin.freelancerFirstname + ' ' + userLogin.freelancerLastname) %></h2>                   
                    <% if (userLogin.rol === "freelancer") { %>
                        <h3><%= d.name %></h3>
                    <% } %>
                    <div>
                        <div>
                            <p>Jobs encargados</p>
                            <p>0</p>
                        </div>
                        <div>
                            <p>Jobs finalizados</p>
                            <p>0</p>
                        </div>
                    </div>
                </div>
            </article>
            <article>
                <h3>Descripcion</h3>
                <% if (userLogin.rol === "freelancer") { %>
                    <p><%= d.description %></p>
                <% } else { %>
                    <p><%= userLogin.companyDescription %></p>
                <% } %>
                              
            </article>
        </section>
        <% if (userLogin.rol === "freelancer") { %>
            <aside>
                <div>
                    <h3>Mis proyectos</h3>
                    <% if (userLogin.rol === "freelancer" && d.image.length) { %>
                        <% d.image.forEach(i => { %>
                            <img src="./images/productos/<%= i %>" alt="User Image">
                        <% }) %>
                    <% } %>
                </div>
                <div>
                    <h3>Formacion</h3>
                    <p>F1</p>
                    <p>F1</p>
                    <p>F1</p>
                    <p>F1</p>
                </div>
            
            </aside>
        <% } else { %>
            <aside>
                <p>No hay nada todavia</p>
            </aside>
        <% } %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scrollableModal">
            Editar datos
        </button>
        <!--No es perfil entonces que muestre-->
    </main>
    <%- include('./modal/edit') %>
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>