<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head', {title: 'Home | FreeLab' }) %>
<body class="body-register">
    <%- include('../partials/header')%>
    <div class="register-container">

        <!-- Formulario de registro -->
        <div class="register-form">
        
        <!-- empresaForm.ejs -->
        <form id="employer-registration" class="registration-section employer" action="" method="POST" enctype="multipart/form-data">

            <h1>Registro Empresa</h1>

            <!-- Nombre de la Empresa -->
            <label for="companyName">Nombre de la Empresa </label>
            <div class="input-line">
                <input type="text" id="companyName" name="companyName" placeholder="Nombre de la Empresa" >
                <small class="text-danger ms-2"><%= locals.errors && errors.companyName ? errors.companyName.msg : null %></small>
            </div>

            <!-- Confirmar Contraseña -->
        <label for="confirmPassword">Confirmar Contraseña </label>
        <div class="input-line">
            <input type="password" id="confirmPassword" name="confirmPassword" >
            <small class="text-danger ms-2"><%= locals.errors && errors.confirmPassword ? errors.confirmPassword.msg : null %></small>
        </div>
            
            <!-- Teléfono Celular -->
            <label for="employerPhone">Teléfono Celular</label>
            <div class="input-line-phone">
                <div class="phone-input-container">
                    <select id="employerPhoneCode" name="employerPhoneCode" >
                        <option value="+1">+1 (EE. UU.)</option>
                    <option value="+44">+44 (Reino Unido)</option>
                    <option value="+54">+54 (Argentina)</option>
                    <option value="+55">+55 (Brasil)</option>
                    <option value="+56">+56 (Chile)</option>
                    <option value="+57">+57 (Colombia)</option>
                    <option value="+51">+51 (Perú)</option>
                    <option value="+595">+595 (Paraguay)</option>
                    <option value="+598">+598 (Uruguay)</option>
                    <option value="+1">+1 (EE. UU.)</option>
                    <option value="+44">+44 (Reino Unido)</option>
                    <option value="+81">+81 (Japón)</option>
                    <option value="+86">+86 (China)</option>
                    <option value="+91">+91 (India)</option>
                    </select>
                    <div class="separator-container">
                        <div class="separator"></div>
                    </div>
                    <input type="text" id="employerPhone" name="employerPhone" placeholder="Número de teléfono celular" pattern="[0-9]+" >
                    <small class="text-danger ms-2"><%= locals.errors && errors.employerPhone ? errors.employerPhone.msg : null %></small>
                </div>
            </div>

            <!-- Imagen de Perfil -->
            <div class="input-line">
                <label for="empresaImage">Agregar imagen de perfil</label>
                <input type="file" name="empresaImage" class="form-control" id="empresaImage">
            </div>
            
            <!-- Breve Descripción de la Empresa -->
            <label for="companyDescription">Breve Descripción de la Empresa </label>
            <div class="input-line-empresa">
                <textarea id="companyDescription" name="companyDescription" placeholder="Breve descripción de la empresa" ></textarea>
                <small class="text-danger ms-2"><%= locals.errors && errors.companyDescription ? errors.companyDescription.msg : null %></small>
            </div>
        
            
            <button type="submit" class="registration-button empresa">Registrarse como Empresa</button>
        </form>


        </div>

        
    </div>
    <%- include('../partials/footer')%>
    <%- include('../partials/scripts') %>
</body>
</html>
