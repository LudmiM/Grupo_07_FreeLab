<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head', {title: 'Home | FreeLab' }) %>
</head>
<body class="body-register">
    <%- include('../partials/header') %>
    <div class="register-container">
        <div class="register-form">
            <form id="employer-registration" class="registration-section employer" action="" method="POST" enctype="multipart/form-data">
                <h1>Registro Empresa</h1>
                <!-- Nombre de la Empresa -->
                <label for="companyName">Nombre de la Empresa</label>
                <div class="input-line">
                    <input type="text" id="companyName" name="companyName" placeholder="Nombre de la Empresa">
                    <small class="text-danger-reg-emp ms-2"></small>
                </div>
                <!-- Ubicación de la Empresa -->
                <label for="location">Ubicación de la Empresa</label>
                <div class="input-line">
                    <input type="text" id="location" name="location" placeholder="Ubicación de la Empresa">
                    <small class="text-danger-reg-emp ms-2"></small>
                </div>
                <!-- Imagen de Perfil -->
                <div class="input-line">
                    <label for="empresaImage">Agregar imagen de perfil</label>
                    <input type="file" name="empresaImage" class="form-control" id="empresaImage">
                    <small class="text-danger-reg-emp ms-2"></small>
                </div>
                <!-- Sitio Web de la Empresa -->
                <label for="website">Sitio Web de la Empresa</label>
                <div class="input-line">
                    <input type="text" id="website" name="website" placeholder="Sitio Web de la Empresa">
                    <small class="text-danger-reg-emp ms-2"></small>
                </div>
                <button type="submit" class="registration-button empresa">Registrarse como Empresa</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
    <script src="/js/empresaValidationFront.js"></script>
</body>
</html>
